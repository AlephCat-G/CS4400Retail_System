<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddDroneController">
    <VBox spacing="10" alignment="TOP_CENTER" AnchorPane.topAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" maxWidth="200">
        <Label text="Add Drone" style="-fx-font-size: 16;" />
        <TextField fx:id="tfStoreID" promptText="Store ID"/>
        <TextField fx:id="tfDroneTag" promptText="Drone Tag"/>
        <TextField fx:id="tfCapacity" promptText="Capacity"/>
        <TextField fx:id="tfRemainingTrips" promptText="Remaining Trips"/>
        <TextField fx:id="tfPilot" promptText="Pilot"/>
        <HBox spacing="10" alignment="CENTER">
            <Button text="Submit" fx:id="btnSubmit" onAction="#handleAddDrone"/>
            <Button text="Cancel" fx:id="btnCancel" onAction="#handleCancel"/>
        </HBox>
    </VBox>
</AnchorPane>

