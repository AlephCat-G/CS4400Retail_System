<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddCustomerController">
    <VBox spacing="10" alignment="TOP_CENTER" AnchorPane.topAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" maxWidth="200">
        <Label text="Add Customer" style="-fx-font-size: 16;" />
        <TextField fx:id="tfUsername" promptText="Username"/>
        <TextField fx:id="tfFirstName" promptText="First Name"/>
        <TextField fx:id="tfLastName" promptText="Last Name"/>
        <TextField fx:id="tfAddress" promptText="Address"/>
        <DatePicker fx:id="dpBirthday" promptText="Birthdate"/>
        <TextField fx:id="tfRating" promptText="Rating"/>
        <TextField fx:id="tfCredit" promptText="Credit"/>
        <HBox spacing="10" alignment="CENTER">
            <Button text="Submit" fx:id="btnSubmit" onAction="#handleAddCustomer"/>
            <Button text="Cancel" fx:id="btnCancel" onAction="#handleCancel"/>
        </HBox>
    </VBox>
</AnchorPane>