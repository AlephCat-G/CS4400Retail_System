<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddOrderLineController">
    <VBox spacing="10" alignment="TOP_CENTER" AnchorPane.topAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" maxWidth="300">
        <Label text="Add Order Line" style="-fx-font-size: 16;" />
        <TextField fx:id="tfOrderID" promptText="Order ID"/>
        <TextField fx:id="tfProductBarcode" promptText="Product Barcode"/>
        <TextField fx:id="tfProductPrice" promptText="Product Price"/>
        <TextField fx:id="tfProductQuantity" promptText="Product Quantity"/>
        <HBox spacing="10" alignment="CENTER">
            <Button text="Add" fx:id="btnAdd" onAction="#handleAddOrderLine"/>
            <Button text="Cancel" fx:id="btnCancel" onAction="#handleCancel"/>
        </HBox>
    </VBox>
</AnchorPane>

