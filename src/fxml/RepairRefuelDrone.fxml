<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RepairRefuelDroneController">
    <VBox spacing="10" alignment="TOP_CENTER" AnchorPane.topAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" maxWidth="200">
        <Label text="Repair &amp; Refuel Drone" style="-fx-font-size: 16;" />
        <TextField fx:id="tfDroneStore" promptText="Drone Store"/>
        <TextField fx:id="tfDroneTag" promptText="Drone Tag"/>
        <TextField fx:id="tfRefueledTrips" promptText="Refueled Trips"/>
        <HBox spacing="10" alignment="CENTER">
            <Button text="Refuel" fx:id="btnRefuel" onAction="#handleRefuel"/>
            <Button text="Cancel" fx:id="btnCancel" onAction="#handleCancel"/>
        </HBox>
    </VBox>
</AnchorPane>
